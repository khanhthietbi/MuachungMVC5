@model muachung.Models.User

<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <img src="~/Content/UserAvatar/@Model.Avatar" class="user-image" alt="" />
    <span class="hidden-xs">Xin chào : @Model.Username</span>
</a>
<ul class="dropdown-menu">
    <!-- User image -->
    <li class="user-header">
        <img src="~/Content/UserAvatar/@Model.Avatar" class="user-image" alt="" />
        <p>
            @Model.Username
            <small>D.K. - The rider in the sky</small>
        </p>
    </li>

    <!-- Menu Footer-->
    <li class="user-footer">
        <div class="pull-left">
            <a href="@Url.Action("Edit", "Portals", new { id = Model.UserId })" class="btn btn-default btn-flat">Thông tin</a>
        </div>
        <div class="pull-right">           
            @using (Html.BeginForm("LogOff", "AccountLogin", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()

                <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Đăng xuất</a>
            }
                       
        </div>
    </li>
</ul>

